// Code horizontal scroll bar is not aligned correctly
div.line-numbers-mode pre {
	padding-left: 1em !important;
	margin-left: 3.5em !important;
}

// Sub groups are grayed out
.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable){
	opacity: 1 !important;
}

.site-name{
	display:none !important;
}

.depth-1 .sidebar-heading{
	font-size: 1em !important;
}
.ascii-mode {
    font-family: monospace;
    line-height: 0.8;   
    white-space: pre;
}
table {
    width: fit-content; 
    margin: 0 auto; 
    
}
th, td {
    padding: 0.35em;
}
p > img {
    margin: 0 auto;    
    display: block;
}
img[src$=svg] {
    width: 100% !important;
    padding-top: 15px;
    padding-bottom: 15px;
}
.page-nav {
  display: none;
}
